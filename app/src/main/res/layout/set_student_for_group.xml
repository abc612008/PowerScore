<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="#e1e1e1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/main"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:id="@+id/ok"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:textColor="#ffffff" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:id="@+id/back">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/back"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/backimc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="返回"
                    android:id="@+id/textView15"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/backimc"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            android:paddingBottom="10dp"
            android:id="@+id/relativeLayout28"
            android:layout_below="@+id/relativeLayout8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/group_name"
                android:layout_gravity="center_horizontal"
                android:paddingTop="25dp"
                android:textColor="#ffffff"
                android:textColorHint="#e1e1e1"
                android:hint="此处键入组名" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在下方列表中选择组员"
                android:id="@+id/textView32"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:paddingTop="10dp"
                android:layout_below="@+id/group_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="381dp"
            android:id="@+id/expandableListView"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/relativeLayout28" />
    </RelativeLayout>
</LinearLayout>