<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayout10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/main">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:id="@+id/ok"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:textColor="#ffffff" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:id="@+id/back" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/back"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/imageView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="返回"
                    android:id="@+id/textView9"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/inputscore"
            android:visibility="visible"
            android:background="#ebeff2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@+id/relativeLayout9"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout11">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView13"
                    android:src="@drawable/jgh"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_press"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:id="@+id/backspace"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/backspace" />

                <ImageView
                    android:layout_width="0.5px"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView16"
                    android:src="@drawable/jgt"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/backspace" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:id="@+id/score"
                    android:gravity="center_vertical|right"
                    android:textColor="#3b454b"
                    android:textSize="30dp"
                    android:paddingRight="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/backspace" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/relativeLayout9">

                <ImageView
                    android:layout_width="0.5px"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView11"
                    android:src="@drawable/jgt"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/linearLayout3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:id="@+id/linearLayout3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:textSize="80px"
                        android:text="+"
                        android:textColor="#ffffff"
                        android:id="@+id/bplus"
                        android:src="@drawable/plus_white"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:text="-"
                        android:textSize="100px"
                        android:id="@+id/bminus"
                        android:src="@drawable/minus_blue"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:visibility="visible">
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/linearLayout3"
                                android:layout_width="match_parent"
                                android:gravity="center_vertical">

                                <Button
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_press"
                                    android:textSize="30dp"
                                    android:textColor="#3b454b"
                                    android:text="1"
                                    android:id="@+id/b1" />

                                <ImageView
                                    android:layout_width="0.5px"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:id="@+id/q1"
                                    android:src="@drawable/jgt" />

                                <Button
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_press"
                                    android:textSize="30dp"
                                    android:textColor="#3b454b"
                                    android:text="2"
                                    android:id="@+id/b2" />

                                <ImageView
                                    android:layout_width="0.5px"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:id="@+id/q2"
                                    android:src="@drawable/jgt" />

                                <Button
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_press"
                                    android:text="3"
                                    android:textColor="#3b454b"
                                    android:textSize="30dp"
                                    android:id="@+id/b3" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/qf" />

                            </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView9"
                        android:src="@drawable/jgh"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/linearLayout3" />

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical">
                        <Button
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_press"
                            android:text="4"
                            android:textColor="#3b454b"
                            android:textSize="30dp"
                            android:id="@+id/b4" />

                        <ImageView
                            android:layout_width="0.5px"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:id="@+id/q3"
                            android:src="@drawable/jgt" />

                        <Button
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_press"
                            android:textSize="30dp"
                            android:textColor="#3b454b"
                            android:text="5"
                            android:id="@+id/b5" />

                        <ImageView
                            android:layout_width="0.5px"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:id="@+id/q4"
                            android:src="@drawable/jgt" />

                        <Button
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_press"
                            android:text="6"
                            android:textColor="#3b454b"
                            android:textSize="30dp"
                            android:id="@+id/b6" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView7" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView10"
                        android:src="@drawable/jgh"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/linearLayout3" />

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical">
                        <Button
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_press"
                            android:text="7"
                            android:textColor="#3b454b"
                            android:textSize="30dp"
                            android:id="@+id/b7" />

                        <ImageView
                            android:layout_width="0.5px"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:id="@+id/q5"
                            android:src="@drawable/jgt" />

                        <Button
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_press"
                            android:textSize="30dp"
                            android:textColor="#3b454b"
                            android:text="8"
                            android:id="@+id/b8" />

                        <ImageView
                            android:layout_width="0.5px"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:id="@+id/q6"
                            android:src="@drawable/jgt" />

                        <Button
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_press"
                            android:text="9"
                            android:textColor="#3b454b"
                            android:textSize="30dp"
                            android:id="@+id/b9" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView8" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5px"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView15"
                        android:src="@drawable/jgh"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/linearLayout3" />

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical" >

                        <Button
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.06"
                            android:background="@drawable/button_press"
                            android:text="0"
                            android:textColor="#3b454b"
                            android:textSize="30dp"
                            android:id="@+id/b0" />

                        <ImageView
                            android:layout_width="0.5px"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:id="@+id/imageView12"
                            android:src="@drawable/jgt" />

                        <Button
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_press"
                            android:textSize="30dp"
                            android:textColor="#3b454b"
                            android:text="."
                            android:id="@+id/button4" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView14" />
                    </LinearLayout>

                </LinearLayout>

                ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView9"
                    android:src="@drawable/jgz"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/linearLayout3" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/main"
            android:id="@+id/relativeLayout15"
            android:layout_above="@+id/inputscore"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分数"
                android:id="@+id/textView20"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textColor="#ffffff"
                android:paddingLeft="15dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/droppp"
                android:src="@drawable/dropn"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:layout_alignParentBottom="true"
                android:paddingLeft="15dp"
                android:background="@drawable/layout_press" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_below="@+id/relativeLayout10"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/relativeLayout15"
            android:padding="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/linearLayout"
                android:paddingBottom="15dp"
                android:background="@drawable/choose_press">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:id="@+id/choosedate"
                    android:focusable="false"
                    android:focusableInTouchMode="false">

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView25"
                        android:background="#14a2d4"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView26"
                        android:background="#14a2d4"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/imageView25" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView27"
                        android:background="#14a2d4"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView28"
                        android:background="#14a2d4"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/showdate"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#14a2d4" />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView17"
                    android:layout_weight="0.09" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView12" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/choose_press"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/chooseresson">

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView22"
                        android:background="#e1e1e1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView19"
                        android:background="#e1e1e1"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/imageView22" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView23"
                        android:background="#e1e1e1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView24"
                        android:background="#e1e1e1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="理由"
                        android:id="@+id/textView21"
                        android:textColor="#000000"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/choose_press"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:id="@+id/choosemem"
                android:focusable="false"
                android:focusableInTouchMode="false">

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView29"
                    android:background="#e1e1e1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView30"
                    android:background="#e1e1e1"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/imageView29" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView31"
                    android:background="#e1e1e1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView32"
                    android:background="#e1e1e1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="成员"
                    android:id="@+id/textView16"
                    android:textColor="#000000"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textView11"
                    android:layout_below="@+id/textView16"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/imageView31"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:textColor="#14a2d4"
                    android:hint="未设置"
                    android:gravity="center_vertical|center_horizontal" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>