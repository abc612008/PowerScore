                    android:paddingTop="11dp"
                    android:textColor="@color/dqh"
                    android:textSize="15dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="-2"
                    android:id="@+id/show_mark"
                    android:layout_toRightOf="@+id/imageView51"
                    android:layout_toEndOf="@+id/imageView51"
                    android:paddingBottom="13dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/textView41" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout33"
                android:layout_below="@+id/relativeLayout32"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageView54"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
