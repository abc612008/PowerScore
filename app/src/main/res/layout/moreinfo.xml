                android:id="@+id/relativeLayout30">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageView44"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/reason"
                    android:padding="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="理由"
                    android:id="@+id/textView34"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView44"
                    android:layout_toEndOf="@+id/imageView44"
                    android:paddingTop="11dp"
                    android:textColor="@color/dqh"
                    android:textSize="15dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="上午迟到"
                    android:id="@+id/show_reason"
                    android:layout_alignParentBottom="false"
                    android:layout_toRightOf="@+id/imageView44"
                    android:layout_toEndOf="@+id/imageView44"
                    android:paddingBottom="13dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/textView34"
                    android:paddingRight="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/imageView46"
                    android:background="@color/light_gray"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/show_reason" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout31"
                android:layout_below="@+id/relativeLayout35"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageView47"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/group"
                    android:padding="18dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/imageView48"
                    android:background="@color/light_gray"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/show_members" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="成员"
                    android:id="@+id/textView37"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView47"
                    android:layout_toEndOf="@+id/imageView47"
                    android:paddingTop="11dp"
                    android:textColor="@color/dqh"
                    android:textSize="15dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="王安海,王安海,王安海,王安海,王安海,王安海,王安海,王安海,王安海,王安海,王安海,王安海,王安海,王安海,王安海,"
